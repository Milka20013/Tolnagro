<div class="card" style="background-color:@BgColor; width:@CardWidth" onclick="@OnClick">
    <div class="card-content" style="color:@TextColor">@Content</div>
</div>

@code {
    [Parameter]
    public string? Content { get; set; }
    [Parameter]
    public string BgColor { get; set; } = "#4A4A4A";
    [Parameter]
    public string TextColor { get; set; } = "white";
    [Parameter]
    public string CardWidth { get; set; } = "100%";

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}
